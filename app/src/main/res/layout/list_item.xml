<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <TextView
        android:id="@+id/tv_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:text="TOM"
        android:textSize="30dp"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"/>

    <ImageView
        android:id="@+id/img_list_weather"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="10dp"
        android:src="@drawable/rainy"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tv_day"/>

    <LinearLayout
        android:id="@+id/ll_weather_desc"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/img_list_weather"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/list_weather_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="20dp"
            android:text="Rainy"
            android:textStyle="italic"
            android:textSize="24sp"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/temperature"/>

        <TextView
            android:id="@+id/list_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="5dp"
            android:text="27/29"
            android:textSize="24sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_weather_details"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/img_list_weather"
        android:layout_below="@+id/ll_weather_desc"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@drawable/humidity"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:text="70%"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@drawable/pressure"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:text="1151 hPa"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@drawable/wind"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:text="715 kmph"/>

    </LinearLayout>

</RelativeLayout>